<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchCity"
        android:orientation="vertical">

    <TextView
            android:text="@string/text_welcome"
            android:layout_width="match_parent"
            android:layout_height="62dp" android:id="@+id/textView" android:layout_margin="16dp"
            android:textColor="@android:color/background_dark" android:textSize="18sp" android:textAlignment="center"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/entryCityName" android:textAlignment="center" android:hint="@string/enterCityName"/>
    <Button
            android:text="SEARCH CITY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnSearchCity" android:layout_margin="15dp"/>
    <Button
            android:text="ACTUAL LOCATION BY GPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnActualLocation" android:layout_margin="15dp"
            android:layout_marginTop="50dp"/>
</LinearLayout>