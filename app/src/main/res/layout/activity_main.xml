<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorPrimary">

    <TextView
            android:text="@string/text_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/textTemperature" android:layout_marginTop="75dp"
            android:textSize="45sp" android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:text="@string/text_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:id="@+id/textCity" android:layout_marginTop="38dp"
            android:textSize="36sp" android:layout_below="@+id/textTemperature"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:id="@+id/textConditionMeteo"
            android:textSize="30sp" android:layout_marginTop="2dp"
            android:layout_below="@+id/textCity" android:textColor="@color/colorPrimaryDark"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/change_city_symbol"
            android:id="@+id/imagenClima" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="84dp" android:layout_marginTop="5dp"
            android:layout_below="@+id/textConditionMeteo"/>
</RelativeLayout>